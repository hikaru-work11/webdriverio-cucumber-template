{
  "name": "@hikaru-work11/webdriverio-cucumber-template",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Boilerplate project to run WebdriverIO tests with Cucumber",
  "homepage": "https://github.com/hikaru-work11/webdriverio-cucumber-template",
  "type": "module",
  "files": [
    "src/steps",
    "src/support",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hikaru-work11/webdriverio-cucumber-template.git"
  },
  "bugs": {
    "url": "https://github.com/hikaru-work11/webdriverio-cucumber-template/issues"
  },
  "keywords": [
    "wdio",
    "webdriver",
    "webdriverio",
    "cucumber",
    "test",
    "boilerplate",
    "selenium"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "read -p \"Are you sure you want to clean the project? [y/n] \" REPLY; if [[ $REPLY =~ ^[Yy]$ ]]; then rm -R .git .github demo-app test .codeclimate.yml .travis.yml jest.json wdio.BUILD.conf.js src/features/**; fi",
    "test": "run-s test:*",
    "test:lint": "eslint 'src/**/*.ts' 'test/**/*.js!(setup.js)'",
    "test:unit": "jest --config=jest.config.cjs --detectOpenHandles",
    "test:features": "cross-env NODE_OPTIONS=--loader=tsx wdio run wdio.BUILD.conf.ts",
    "wdio": "cross-env NODE_OPTIONS=--loader=tsx wdio run wdio.BUILD.conf.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@wdio/cli": "9.1.2",
    "@wdio/config": "9.1.2",
    "@wdio/globals": "9.1.2",
    "@wdio/local-runner": "9.1.2",
    "@wdio/spec-reporter": "9.1.2",
    "@wdio/static-server-service": "9.1.2",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-wdio": "^9.0.8",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "npm-run-all2": "^6.2.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.6.2",
    "webdriverio": "9.1.2"
  },
  "peerDependencies": {
    "@wdio/cucumber-framework": "9.x"
  }
}
